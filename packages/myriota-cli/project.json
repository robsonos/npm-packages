{
  "name": "myriota-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/myriota-cli/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/myriota-cli",
        "main": "packages/myriota-cli/src/index.ts",
        "tsConfig": "packages/myriota-cli/tsconfig.lib.json",
        "assets": [
          "packages/myriota-cli/package.json",
          "packages/myriota-cli/docs/**",
          "packages/myriota-cli/LICENSE",
          "packages/myriota-cli/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/myriota-cli/jest.config.ts"
      }
    },
    "coverage-badge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "coverage-badges-cli --source {projectRoot}/test-output/jest/coverage/coverage-summary.json --output {projectRoot}/docs/coverage/badge.svg --style flat"
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "dependsOn": ["myriota-cli:coverage-badge"]
    }
  }
}
